generator client {
  // Standard Prisma Client output so imports work via `@prisma/client`.
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Roles for API authorization.
enum Role {
  ADMIN
  DJ
  LISTENER
}

// DJ lifecycle.
enum DjStatus {
  PENDING
  APPROVED
  BLOCKED
}

// Mix lifecycle (PASO 1).
enum MixStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  role         Role       @default(LISTENER)
  djProfile    DjProfile?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model DjProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Public-facing profile fields.
  displayName String
  bio         String  @default("")
  location    String?

  status DjStatus @default(PENDING)

  // Postgres supports string arrays; keep it lightweight.
  genres String[]

  mixes Mix[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mix {
  id          String        @id @default(cuid())
  title       String
  description String        @default("")

  genre    String @default("")
  audioUrl String
  coverUrl String

  isClean Boolean @default(true)

  // Owner of this mix (a DJ profile).
  djId String
  dj   DjProfile @relation(fields: [djId], references: [id], onDelete: Cascade)

  status MixStatus @default(PENDING)

  createdAt DateTime @default(now())

  @@index([djId])
  @@index([status, createdAt])
}

// PASO 5: Assistant library (hidden catalog of audio clips to play from text queries).
model AssistantLibraryItem {
  id String @id @default(cuid())

  title String
  // A ready-to-play URL (e.g., Cloudinary in folder `zylofm/assistant_library`).
  audioUrl String

  // Lightweight searchable tags.
  keywords String[]

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive, updatedAt])
}
