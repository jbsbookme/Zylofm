generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum DjStatus {
  PENDING
  APPROVED
  REJECTED
  BLOCKED
}

model MusicTrack {
  id        String   @id @default(cuid())
  title     String
  keywords  String?
  fileUrl   String
  fileName  String
  mimeType  String
  size      Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AppSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Dj {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  instagram String?
  bio       String?
  status    DjStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
